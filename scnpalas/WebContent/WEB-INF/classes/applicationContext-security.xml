<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
	
    <http pattern="/login.html" security="none"/>
    <http pattern="/nologin.html" security="none"/>
    <http pattern="/css/**" security="none"/>
    <http pattern="/js/**" security="none"/>
    <http pattern="/images/*" security="none"/>
    <http pattern="/Maestros/Alumnos/Registro.jsp" security="none"/>
    <http pattern="/Maestros/Alumnos/RegistroFamiliar.jsp" security="none"/>
    <http>
    	<intercept-url pattern="/index.jsp" access="ROLE_ADMIN,ROLE_DOCENTE,ROLE_TUTOR,ROLE_ALUMNO"/>
    	<intercept-url pattern="/Administracion/**" access="ROLE_ADMIN" />
        <intercept-url pattern="/**" access="ROLE_ADMIN,ROLE_DOCENTE" />
        <form-login login-page='/login.html' default-target-url='/index.jsp' authentication-failure-url="/nologin.html" always-use-default-target='true'/>
        <access-denied-handler error-page="/denied.html" />
        <logout logout-success-url="/logout.html" invalidate-session="true" />      
    </http>
    
    <beans:bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    	<beans:property name="driverClassName" value="com.mysql.jdbc.Driver" />
    	<beans:property name="url" value="jdbc:mysql://localhost:3306/scnpalas" />
    	<beans:property name="username" value="root" />
    	<beans:property name="password" value="root" />
    </beans:bean>
    
    <authentication-manager>
    	<authentication-provider>
    		<jdbc-user-service data-source-ref="dataSource" 
    						   users-by-username-query="SELECT u.usuario, u.password, 'true' FROM usuario u WHERE u.usuario = ?" 
    						   authorities-by-username-query="SELECT u.usuario, r.descripcion 
    						   								  FROM usuario u, rol r 
    						   								  WHERE r.ident = u.rol 
    						   								  AND u.usuario = ? "/>
    	</authentication-provider>
    </authentication-manager>
</beans:beans>